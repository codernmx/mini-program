page {
    background-color: #fff;
    height: 100%;
}

.cropper-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}

.cropper-buttons {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    line-height: 50px;
    margin-top: 20px;
}

.cropper-buttons .upload,
.cropper-buttons .getCropperImage {
    width: 50%;
    text-align: center;
}

.cropper-buttons button {
    width: 50%;
    text-align: center;
    background: #fff;
}

.cropper-buttons button::after {
    border: 0;
}

.footer-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 20px;
    line-height: 20px;
}

.footer-wrap .link {
    width: 50%;
}

.footer-wrap button {
    background: transparent;
    padding: 0;
}

.footer-wrap button::after {
    border: 0;
}

.more-mina-wrap {
    position: relative;
    display: flex;
    flex-direction: column;
    border: 1px solid #eee;
    padding-bottom: 5px;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}

.more-mina-wrap button {
    height: 34px;
    line-height: 34px;
    font-size: 14px;
    color: #1aac19;
}

.link {
    color: #fff;
    background: #ffa000 !important;
    font-size: 14px;
    line-height: 70rpx;
    height: 70rpx;
}

ad {
    transform: scale(0.98) !important;
}