@import "../public.wxss";
page {
    background-color: #f8f8f8;
    height: 100%;
}


.clip-container {
    position: relative;
}

.clip-item {
    position: absolute;
    overflow: hidden;
    background: #eee;
}

.clip-item image {
    position: absolute;
}

.collide {
    opacity: 0.5;
    z-index: 999;
}

.addimg {
    display: flex;
    justify-content: center;
    position: fixed;
    bottom: 30px;
    width: 100%;
    font-family: "Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,"Lucida Grande",sans-serif;
}
.addimg .buttonl{
    width: 5px;
} 

.button {
    background-color: #f5f5f5;
    border-color: #333333;
    font-weight: 300;
    font-size: 16px;
    text-decoration: none;
    text-align: center;
    width: 46px;
    line-height: 22px;
    height: 46px;
    padding: 12px 10px;
    display: inline-block;
    border-radius: 5px;
    border: #ececec solid 1px;
    box-shadow: rgba(0,0,0,0.12) 0px 2px 6px,rgba(0,0,0,0.24) 0px 1px 2px;
}

.button:active {
    box-shadow: 3px 3px 3px 2px rgb(243,233,233);
}

.color1 {
    background-color: rgb(127,216,182);
}

.color2 {
    background-color: rgb(223,231,235);
}

.color3 {
    background-color: rgb(225,215,240);
}

.color4 {
    background-color: rgb(253,230,210);
}

.buttonl {
    width: 12px;
}

.bgbg {
    padding: 12px;
    display: flex;
    background-color: #f5f5f5;
    margin: 35px;
    border-radius: 5px;
    border: #ececec solid 1px;
}