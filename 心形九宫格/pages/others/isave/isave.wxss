.isave {
    width: 100%;
    height: 100%;
    position: fixed;
}

.tips {
    margin: 0rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    text-align: center;
    box-shadow: 0rpx 4rpx 8rpx rgba(0,0,0,0.082);
}

.imageShow {
    border: 1rpx solid rgba(234,234,234,0.733);
    margin: 30rpx 20rpx 20rpx 20rpx;
    height: 800rpx;
    max-height: 900rpx;
    padding: 10rpx;
    border-radius: 8rpx;
}

.saveImage {
    position: fixed;
    height: 100rpx;
    line-height: 90rpx;
    z-index: 99;
    bottom: 0;
    left: 0;
    font-size: 30rpx;
    width: 750rpx;
    overflow: hidden;
    box-sizing: border-box;
    color: #ffffff;
    text-align: center;
    box-shadow: 0rpx -4rpx 10rpx rgba(0,0,0,0.2);
    background-color: #f8678d;
}