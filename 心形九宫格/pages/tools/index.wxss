.swiper {
    height: 300rpx;
}

.swiper .wx-swiper-dot {
    width: 30rpx;
    height: 10rpx;
    border-radius: 10px;
}

.swiper .wx-swiper-dot-active {
    width: 30rpx;
    height: 10rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.swiperItem {
    height: 300rpx;
}

.swiperItem image {
    width: 100%;
    height: 300rpx;
}

.itemBox {
    display: flex;
    flex-wrap: wrap;
    background: #fff;
    margin: 30rpx;
    border-radius: 20rpx;
    padding-top: 30rpx;
}

.itemBox view {
    width: 25%;
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    font-size: 26rpx;
    color: gray;
}

.itemBox view image {
    width: 50rpx;
    height: 50rpx;
}


/* 版权 */
.copy {
    font-size: 28rpx;
    text-align: center;
    color: gray;
    margin: 30rpx auto;
}





/* 复制过来 */
.main {
    position: relative;
}

.nav_item {
    background: #fff;
    position: relative;
    border-radius: 8rpx;
    display: block;
    margin: 32rpx 32rpx;
    overflow: hidden;
    border: solid 1px #f2f2f2;
    box-shadow: 0px 2px 5px 5px #F6F6F6;
}

.nav_item .nav_icon {
    height: 90rpx;
    width: 90rpx;
    border-radius: 16rpx;
    margin: 42rpx 28rpx 42rpx 32rpx;
    display: block;
    float: left;
}

.text .title {
    font-size: 34rpx;
    margin-top: 38rpx;
    color: #555;
}

.text .desc {
    font-size: 30rpx;
    color: #aaa;
    margin-top: 16rpx;
    line-height: 30rpx;
    padding-right: 8rpx;
}