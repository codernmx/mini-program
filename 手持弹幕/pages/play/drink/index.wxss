.btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    width: 139rpx;
    height: 299rpx;
}

.btn.hover {
    opacity: .7;
}

canvas {
    position: relative;
    background-color: #000;
    overflow: hidden;
}

@-webkit-keyframes exit1 {
    0% {
        transform: translate3d(0,0,0);
    }

    to {
        transform: translate3d(-100%,-168rpx,0);
    }
}

@keyframes exit1 {
    0% {
        transform: translate3d(0,0,0);
    }

    to {
        transform: translate3d(-100%,-168rpx,0);
    }
}

.finger {
    width: 260rpx;
    height: 336rpx;
    position: absolute;
}

.finger1 {
    top: 150rpx;
    left: 0;
    transform: translate3d(-100%,0,0);
}

.finger1.enter {
    animation: exit1 1s;
}

