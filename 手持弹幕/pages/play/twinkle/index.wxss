.bg {
    width: 100%;
    height: 100vh;
}

.tishi {
    width: 200rpx;
    padding: 10rpx 20rpx;
    background: #000;
    color: #fff;
    border-radius: 10rpx;
    opacity: .6;
}

.fanhui,.tishi {
    margin: 0 auto;
    text-align: center;
    top: 45vh;
    position: relative;
}

.fanhui {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    box-shadow: 0 0 10px #fff;
    line-height: 34rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.fanhui-txt {
    color: #fff;
    font-size: 32rpx;
}

#tuyi {
    top: 40rpx;
    left: 6%;
}

#tuer,#tuyi {
    position: absolute;
    width: 120rpx;
    height: 120rpx;
}

#tuer {
    top: 40%;
    right: 20%;
}

.swiper {
    z-index: 10;
}

.slide-image,.swiper {
    position: absolute;
    width: 120rpx;
    height: 120rpx;
}

.slide-image {
    float: left;
    border-radius: 30px;
}